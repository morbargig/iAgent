# ============================================
# Frontend Environment Variables
# ============================================
# Copy this file to .env.local, .env.development, .env.production, or .env.stage
# and update the values according to your environment.

# ============================================
# API Configuration
# ============================================

# Base API URL (with /api suffix)
# Example: http://localhost:3030/api
# Production: https://iagent-1-jzyj.onrender.com/api
VITE_API_BASE_URL=http://localhost:3030/api

# Alternative API URL (used as fallback in config.ts)
# If set, will be used if VITE_API_BASE_URL is not set
VITE_API_URL=http://localhost:3030/api

# API request timeout in milliseconds (default: 30000 = 30 seconds)
VITE_API_TIMEOUT=30000

# API upload timeout in milliseconds (default: 120000 = 2 minutes)
VITE_API_UPLOAD_TIMEOUT=120000

# ============================================
# Application Configuration
# ============================================

# Base URL for the application (default: /)
VITE_BASE_URL=/

# ============================================
# Feature Flags
# ============================================
# Set to 'true' or 'false' to enable/disable features

# Enable mock mode for testing without backend
VITE_ENABLE_MOCK_MODE=false

# Enable file upload functionality
VITE_ENABLE_FILE_UPLOAD=true

# Enable document management features
VITE_ENABLE_DOCUMENT_MANAGEMENT=true

# Enable language switcher in UI
VITE_ENABLE_LANGUAGE_SWITCHER=true

# Enable dark mode theme toggle
VITE_ENABLE_DARK_MODE=true

# Enable app details dialog
VITE_ENABLE_APP_DETAILS=true

# Enable contact us functionality
VITE_ENABLE_CONTACT_US=true

# ============================================
# Logging Configuration
# ============================================

# Log level: 'debug' | 'info' | 'warn' | 'error'
VITE_LOG_LEVEL=debug

# Enable console logging (true/false)
VITE_ENABLE_CONSOLE_LOG=true
