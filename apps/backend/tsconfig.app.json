{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "Node16",
    "types": ["node", "jest"],
    "rootDir": "src",
    "moduleResolution": "Node16",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2021",
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts"],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/*.spec.js",
    "**/*.test.js"
  ]
}
